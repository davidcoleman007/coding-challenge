{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true,
      "blockBindings": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "generators": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "restParams": true,
      "spread": true,
      "templateStrings": true,
      "modules": false,
      "classes": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "node": true
  },
  "rules": {
    "brace-style": 1,
    "camelcase": 0,
    "comma-dangle": 1,
    "comma-spacing": [1, { "before": false, "after": true }],
    "comma-style": [1, "last"],
    "complexity": 1,
    "curly": 1,
    "default-case": 1,
    "dot-notation": 1,
    "eol-last": 1,
    "eqeqeq": 1,
    "guard-for-in": 1,
    "indent": [1, 2, { "SwitchCase": 1 }],
    "new-cap": 1,
    "new-parens": 1,
    "no-caller": 1,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-class-members": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-duplicate-imports": 2,
    "no-eq-null": 0,
    "no-eval": 1,
    "no-implied-eval": 1,
    "no-invalid-regexp": 2,
    "no-mixed-spaces-and-tabs": 1,
    "no-redeclare": 2,
    "quote-props": [1, "consistent-as-needed"],
    "no-self-compare": 1,
    "no-shadow-restricted-names": 1,
    "no-trailing-spaces": 0,
    "no-undef": 2,
    "no-undef-init": 1,
    "no-underscore-dangle": 0,
    "no-unreachable": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 2,
    "no-useless-constructor": 1,
    "no-with": 1,
    "one-var": [1, "never"],
    "quotes": [1, "single"],
    "radix": 1,
    "semi": [1, "always"],
    "semi-spacing": [1, { "before": false, "after": true }],
    "keyword-spacing": [ 1, { "before": true, "after": true }],
    "space-before-function-paren": [1, {"anonymous": "always", "named": "always", "asyncArrow": "always"}],
    "arrow-parens": [1, "as-needed"],

    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "strict": [1, "global"],
    "use-isnan": 1,
    "valid-jsdoc": 1,
    "yoda": [1, "never", { "exceptRange": false }],
    "space-in-parens": 0,
    "key-spacing": 0,
    "space-infix-ops": 1,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-console" : 0
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "jest": true
  }
}
